<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.samutech.dailyluck.GetTicket">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/toolbar"
        app:title="ADD TICKET"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HINT : "
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="7dp"
                android:id="@+id/hint"
                android:background="@drawable/btnshape"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginVertical="15dp">


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:id="@+id/one"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="2"
                        android:id="@+id/two"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="3"
                        android:id="@+id/three"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="-15dp">


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="4"
                        android:id="@+id/four"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="5"
                        android:id="@+id/five"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="6"
                        android:id="@+id/six"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    >


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="7"
                        android:id="@+id/seven"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="8"
                        android:id="@+id/eight"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:text="9"
                        android:id="@+id/nine"
                        android:textSize="36dp"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:background="@drawable/bubble"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="50dp"
                    android:weightSum="6"
                    android:layout_marginHorizontal="20dp"
                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:id="@+id/onetext"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:background="@drawable/bubble"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:id="@+id/twotext"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:background="@drawable/bubble"/>


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:id="@+id/threetext"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:background="@drawable/bubble"/>


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/fourtext"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:background="@drawable/bubble"/>


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/fivetext"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:background="@drawable/bubble"/>


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:id="@+id/sixtext"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:background="@drawable/bubble"/>


                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/btnshape"
                    android:layout_marginHorizontal="50dp"
                    android:text="ADD TICKET"
                    android:fontFamily="@font/abel"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/addticket"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
