<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.samutech.dailyluck.HomeActivity">



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminateTint="#fff"
        android:id="@+id/progress"
        android:visibility="visible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:weightSum="4">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:id="@+id/hints"
                        android:src="@drawable/ic_notifications_active_black_24dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="#fff"
                        android:background="@drawable/stroke"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:fontFamily="@font/abel"
                        android:id="@+id/tickets"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/stroke"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/abel"
                        android:id="@+id/balance"
                        />


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_settings_black_24dp"
                        android:layout_weight="1"
                        android:id="@+id/setting"/>



                </LinearLayout>


                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:id="@+id/rulesbutton"
                    android:src="@drawable/icons"

                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/abel"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:id="@+id/drawname"
                    android:textColor="#fff"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/abel"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"
                    android:id="@+id/time"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:id="@+id/price"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnshape"
                        android:layout_marginHorizontal="50dp"
                        android:padding="15dp"
                        android:text="GET A TICKET"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:id="@+id/getticket"
                        android:layout_marginBottom="5dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click on the above button to get a ticket"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_marginBottom="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAIR DRAW"
                        android:fontFamily="@font/abel"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/fairdraw"
                        android:layout_gravity="center"
                        android:background="@drawable/stroke"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        />


                    <LinearLayout
                        android:id="@+id/banner_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>
